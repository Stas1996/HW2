<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ic_launcher_background">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/avemgers"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/Start_BTN_Start"
        android:tag="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/Start_BTN_Top10"
        android:layout_toLeftOf="@id/Start_BTN_Top10"
        android:layout_marginBottom="50dp"
        android:text="manual"
        android:backgroundTint="#FF9800"/>
    <Button
        android:id="@+id/Start_BTN_auto"
        android:tag="auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/Start_BTN_Top10"
        android:layout_toRightOf="@id/Start_BTN_Top10"
        android:layout_marginBottom="50dp"
        android:text="auto"
        android:backgroundTint="#FF9800"/>

    <Button
        android:id="@+id/Start_BTN_Top10"
        android:tag="top10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_centerHorizontal="true"
        android:text="Top10"
        android:backgroundTint="#FF9800"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME TO AVENGERS"
        android:textSize="35dp"
        android:layout_above="@id/Start_BTN_Start"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="@android:color/holo_orange_dark"
        ></TextView>

</RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>